{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "./test/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend"
  ]
}
